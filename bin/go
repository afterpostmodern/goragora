#!/bin/sh
PATH=./node/bin:./node_modules/.bin:/usr/local/bin:/usr/bin:/bin
cd $(dirname "${0}")/..
[ ! -d node_modules ] && npm install
case "${1}" in
  build)
    wintersmith build
  ;;
  deploy)
    git pull origin master
    npm install
    wintersmith build
  ;;
  preview)
   wintersmith preview
  ;;
  clean)
   rm -rf ./build
  ;;
esac
